<% provide :title, 'Crie uma tarefa' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for @task do |f| %>
  	  <%= f.label :name, "Nome da tarefa" %>
  	  <%= f.text_field :name %>

  	  <%= f.label :description, "Descrição da tarefa" %>
  	  <%= f.text_field :description %>

  	  <%= f.submit 'Criar tarefa', class: "btn btn-primary" %>
  	<% end %>
  </div>
</div>
