<% if current_user.is_admin? %>
<div class='col-md-12'>
  <%= link_to "Criar nova tarefa", new_task_url, :class=>"btn btn-primary" %>
</div>
<% end %>

<div class='col-md-12'>
<table class='table table-striped'>
  <h2> Minhas Tarefas </h2>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Status</th>
      <% if current_user.is_admin? %>
        <th>Assinalada ?</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= link_to task.name, task %>
      </td>

      <td>
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle"
                  type="button"
                  id="dropdownMenu1"
                  data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="true">
              <span class='current-task-status'><%= task.status %>%</span>
            <span class="caret"></span>
          </button>

          <ul class="dropdown-menu add-new-task-status" aria-labelledby="dropdownMenu1" data-id='<%= task.id %>'>
            <li><a href="javascript: void(0)">0%</a></li>
            <li><a href="javascript: void(0)">25%</a></li>
            <li><a href="javascript: void(0)">50%</a></li>
            <li><a href="javascript: void(0)">75%</a></li>
            <li><a href="javascript: void(0)">100%</a></li>
          </ul>
        </div>
      </td>

      <% if current_user.is_admin? %>
        <td>
          <% if task.user.nil? %>
            SEM USU√ÅRIO
          <% else %>
            <%= link_to task.user.name, task.user %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
