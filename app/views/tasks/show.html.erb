<div class="col-md-6 col-md-offset-3">

<% if current_user.is_admin? %>
<% end %>


<table class='table table-bordered'>
  <tr>
    <td><strong>Nome:</strong></td>
    <td><%= @task.name %></td>
  </tr>

  <tr>
    <td><strong>Descrição:</strong></td>
    <td><%= @task.description %></td>
  </tr>

  <tr>
    <td><strong>Status:</strong></td>
    <td><%= render :partial=>"task_status_field", locals: {task: @task, send_ajax: true} %></td>
  </tr>

  <tr>
    <td><strong>Usuário:</strong></td>
    <td>
      <% if @task.user.nil? %>
        SEM USUÁRIO
      <% else %>
        <%= link_to @task.user.name, @task.user %>
      <% end %>
    </td>
  </tr>

</table>

<div class="Additional options">
  <%= link_to "Atribuir tarefa", "/tasks/#{@task.id}/assign", class: 'btn btn-warning' %>
  <%= link_to "Editar dados", edit_task_url(@task.id), class: 'btn btn-primary'  %>
</div>

</div>
