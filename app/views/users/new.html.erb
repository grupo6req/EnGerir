<% provide :title, 'Cadastre-se' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for @user do |f| %>
  	  <%= f.label :name, "Nome" %>
  	  <%= f.text_field :name %>

  	  <%= f.label :email, "Email" %>
  	  <%= f.email_field :email %>

  	  <%= f.label :description, "Escreva sobre suas competências e interesses" %>
  	  <%= f.text_field :description %>

  	  <%= f.label :areas_worked, "Em que área já trabalhou? (Opcional)" %>
  	  <%= f.text_field :areas_worked %>

  	  <%= f.label :password, "Senha" %>
  	  <%= f.password_field :password %>

  	  <%= f.label :password_confirmation, "Confirme sua senha" %>
  	  <%= f.password_field :password_confirmation %>

  	  <%= f.submit 'Criar conta', class: "btn btn-primary" %>
  	<% end %>
  </div>
</div>
