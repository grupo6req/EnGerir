<% provide :title, 'Crie uma área' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for @area do |f| %>
  	  <%= f.label :name, "Nome da área" %>
  	  <%= f.text_field :name %>

  	  <%= f.label :description, "Descrição da área" %>
  	  <%= f.text_field :description %>

  	  <%= f.submit 'Criar área', class: "btn btn-primary" %>
  	<% end %>
  </div>
</div>
