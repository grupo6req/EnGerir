<table class='table table-striped'>
  <thead>
    <tr>
      <th>Nome</th>

      <th>Edtar</th>
      
      <th>Excluir</th>
    </tr>
  </thead>

  <tbody>
  <% @areas.each do |area| %>
    <tr>
      <td>
        <%= link_to area.name, area %>
      </td>

      <td>
        <%= link_to "Editar", edit_area_url(area.id) %>
      </td>

      <td>
        <%= link_to "Excluir", area,  method: :delete, data: { confirm: 'Tem certeza ?' }  %>
      </td>    
    </tr>
  <% end %>
  </tbody>
</table>
